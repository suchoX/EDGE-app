<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackPrimary">
    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/temp_header"
        android:alpha="0.3"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <TextView
        android:id="@+id/dialog_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Call"
        android:textSize="25sp"
        android:textColor="@color/whitePrimary"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/dialog_separator"
        android:layout_below="@+id/dialog_call"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b9b9b9"
        android:layout_margin="10dp"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/dialog_facebook"
        android:layout_below="@+id/dialog_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Facebook"
        android:textSize="25sp"
        android:textColor="@color/whitePrimary"/>

    </LinearLayout>

</RelativeLayout>
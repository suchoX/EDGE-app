<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.geekonix.edge.MainActivity"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="@color/blackPrimary">
                <RelativeLayout
                    android:id="@+id/event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:alpha="0.3"
                        android:src="@drawable/temp_header"/>

                    <ImageView
                        android:id="@+id/event_image"
                        android:src="@drawable/temp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textColor="@color/whitePrimary"
                        android:textSize="25sp"
                        android:layout_below="@+id/event_image"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="@color/blackPrimary">">
                <RelativeLayout
                    android:id="@+id/megaevent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:alpha="0.3"
                        android:src="@drawable/temp_header"/>

                    <ImageView
                        android:id="@+id/megaevent_image"
                        android:src="@drawable/temp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/megaevent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mega Events"
                        android:textColor="@color/whitePrimary"
                        android:textSize="25sp"
                        android:layout_below="@+id/megaevent_image"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="@color/blackPrimary">>
                <RelativeLayout
                    android:id="@+id/campusambassador_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:alpha="0.3"
                        android:src="@drawable/temp_header"/>

                    <ImageView
                        android:id="@+id/campusambassador_image"
                        android:src="@drawable/temp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/campusambassador_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Campus Ambassador"
                        android:textColor="@color/whitePrimary"
                        android:textSize="25sp"
                        android:layout_below="@id/campusambassador_image"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="@color/blackPrimary">">
                <RelativeLayout
                    android:id="@+id/team_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:alpha="0.3"
                        android:src="@drawable/temp_header"/>

                    <ImageView
                        android:id="@+id/team_image"
                        android:src="@drawable/temp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Team"
                        android:textColor="@color/whitePrimary"
                        android:textSize="25sp"
                        android:layout_below="@+id/team_image"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="@color/blackPrimary">>
                <RelativeLayout
                    android:id="@+id/sponsor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:alpha="0.3"
                        android:src="@drawable/temp_header"/>

                    <ImageView
                        android:id="@+id/sponsor_image"
                        android:src="@drawable/temp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/sponsor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sponsors"
                        android:textColor="@color/whitePrimary"
                        android:textSize="25sp"
                        android:layout_below="@+id/sponsor_image"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>